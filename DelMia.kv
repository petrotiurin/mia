<LoginWidget1>:
    id: login1
    canvas.before:
        Rectangle:
            size:self.size
            #source: "Image/kivy.jpg"
            source: "Image/kivy2.jpeg"

    Label:
        text: "Введите номер телефона"
        pos_hint: {"center_x": 0.5,"center_y": 0.8}
        size_hint: .2, 0.05

    TextInput:
        multiline: False
        pos_hint: {"center_x": 0.5,"center_y": 0.75}
        size_hint: .2, 0.05
        on_text : root.def_write_login(self)
    Label:
        text: "Введите пароль"
        pos_hint: {"center_x": 0.5,"center_y": 0.65}
        size_hint: .2, 0.05
    TextInput:
        multiline: False
        pos_hint: {"center_x": 0.5,"center_y": 0.6}
        size_hint: .2, 0.05
        on_text : root.def_write_password(self)
    Button:
        text: "Войти"
        on_press: root.login_logistics()
        pos_hint: {"center_x": 0.5,"center_y": 0.2}
        size_hint: .2, 0.1